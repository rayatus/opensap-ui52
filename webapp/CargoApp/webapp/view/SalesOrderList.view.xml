<mvc:View 
  xmlns="sap.m" 
  xmlns:f="sap.f"
  xmlns:mvc="sap.ui.core.mvc"
  controllerName="com.jsancho.sap.opensap.ui52.cargo.controller.SalesOrderList">

  <f:DynamicPage id="salesOrderListPage">
    <f:content>
      <Table id="salesOrderListTable"
        sticky="ColumnHeaders"
        items="{ path: '/SalesOrderSet' }"> 
        <headerToolbar>
          <Toolbar>
            <SearchField id="salesOrderSearchField" search=".onSalesOrdersSearch"/>
          </Toolbar>
        </headerToolbar>
        <columns>
          <Column>
            <Text text="{i18n>salesOrderListTable.columnText.SalesOrder}" />
          </Column>
          <Column>
            <Text text="{i18n>salesOrderListTable.columnText.Customer}" />
          </Column>          
          <Column hAlign="End">
            <Text text="{i18n>salesOrderListTable.columnText.NetAmount}"/>
          </Column>          
          <Column hAlign="Center">
            <Text text="{i18n>salesOrderListTable.columnText.Status}" />
          </Column>
        </columns>
        <items>
            <ColumnListItem type="Navigation" press="onItemClicked">
              <cells>
                <ObjectIdentifier 
                  id="salesOrderIdentifier"
                  title="{SalesOrderID}"
                  />
                <ObjectIdentifier 
                  id="customerIdentifier"
                  title="{CustomerName}"
                  />                  
                <ObjectNumber
                  id="salesOrderNetAmount"
						      number="{ parts: [
								              {path: 'NetAmount'},
								              {path: 'CurrencyCode'}
							            ],
                          type: 'sap.ui.model.type.Currency',
                          formatOptions: {showMeasure: false}}"
						      unit="{CurrencyCode}"/>                       
                <ObjectStatus 
                  id="salesOrderLifecycleStatus" 
                  text="{LifecycleStatusDescription}"
                  inverted="false"
                  state="{ path: 'LifecycleStatus',
                          formatter: '.formatter.lifecycleStatus_State'}" />
              </cells>
            </ColumnListItem>
        </items>
      </Table>
    </f:content>
  </f:DynamicPage>

</mvc:View>